<!DOCTYPE html>
<html>
<head>
  <title><%= @page.title || @home.title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="container">

  <header class="row">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <nav><% render partial: 'shared/nav' %></nav>
    <%= yield :header %>
  </header>

  <aside>
    <%= yield :sidebar %>
  </aside>

  <div role="main">
    <%= yield %>
  </div>

  <footer class="row">
    <%= render partial: 'shared/footer' %>
  </footer>

</body>
</html>
